
@{
    ViewBag.Title = "Search";
}

<h2>Movie Search</h2>
<div id="movieSearch">
@using(Html.BeginForm())
{
    <fieldset>
        <legend></legend>
        <p>
            <label>Search</label>
            @Html.TextBox("term")
            @Html.Image("~/Content/Images/wait.gif")
        </p>
        <p>
            <input type="submit" value="Search" />
        </p>
    </fieldset>
}
</div>
<div id="movieDetails"></div>
<div id="searchResults"></div>