@model IEnumerable<MovieReviewApp.Models.Review>

@{
    ViewBag.Title = "Index";
}

<article>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Stars
        </th>
        <th>
            Comment
        </th>
        <th>
            ReviewDate
        </th>
        <th>
            Movie
        </th>
        <th>
            Reviewer
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
			@item.Stars
        </td>
        <td>
			@item.Comment
        </td>
        <td>
			@String.Format("{0:g}", item.ReviewDate)
        </td>
        <td>
			@(item.Movie == null ? "None" : item.Movie.Title)
        </td>
        <td>
			@(item.Reviewer == null ? "None" : item.Reviewer.LastName)
        </td>
    </tr>
}

</table>

</article>

