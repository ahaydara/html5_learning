@model PagedViewModel

<section class="pager">
    @if(Model.CurrentPage != 1)
    {
        @Html.ActionLink("Prev", Model.Action, new { page = Model.CurrentPage - 1, sort = Model.SortBy, desc = Model.SortDesc })
    }
    Page @Model.CurrentPage of @Model.TotalPages
    @if (Model.CurrentPage < Model.TotalPages)
    {
        @Html.ActionLink("Next", Model.Action, new { page = Model.CurrentPage + 1, sort = Model.SortBy, desc = Model.SortDesc })
    }
</section>
