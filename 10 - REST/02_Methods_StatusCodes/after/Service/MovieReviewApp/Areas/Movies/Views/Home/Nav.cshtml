@model MovieReviewApp.ViewModels.NavigationViewModel

@helper MenuSelected(string name)
{
    if (Model.Action.Equals(name, StringComparison.OrdinalIgnoreCase))
    {
        <text>class="menu-current"</text>
    }
}

<nav>
    <ul>
        <li @MenuSelected("index")>@Html.ActionLink("All Movies", "Index", "Home")</li>
        <li @MenuSelected("search")>@Html.ActionLink("Search Movies", "Search", "Home")</li>
        <li @MenuSelected("bygenre")>@Html.ActionLink("Movies by Genre", "ByGenre", "Home")</li>
    </ul>
</nav>
