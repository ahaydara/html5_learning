@model MovieReviewWebApp.Models.User

@{
    ViewBag.Title = "Delete";
}

<article>

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>User</legend>

    <div class="display-label">Password</div>
    <div class="display-field">@Model.Password</div>

    <div class="display-label">PasswordHash</div>
    <div class="display-field">@Model.PasswordHash</div>

    <div class="display-label">PasswordSalt</div>
    <div class="display-field">@Model.PasswordSalt</div>

    <div class="display-label">Email</div>
    <div class="display-field">@Model.Email</div>

    <div class="display-label">CreateDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.CreateDate)</div>

    <div class="display-label">CanLogin</div>
    <div class="display-field">@Model.CanLogin</div>

    <div class="display-label">LastSuccessfulLogin</div>
    <div class="display-field">@String.Format("{0:g}", Model.LastSuccessfulLogin)</div>

    <div class="display-label">FailedPasswordCount</div>
    <div class="display-field">@Model.FailedPasswordCount</div>

    <div class="display-label">LastFailedLogin</div>
    <div class="display-field">@String.Format("{0:g}", Model.LastFailedLogin)</div>

    <div class="display-label">FirstName</div>
    <div class="display-field">@Model.FirstName</div>

    <div class="display-label">LastName</div>
    <div class="display-field">@Model.LastName</div>

    <div class="display-label">IsRoleAdmin</div>
    <div class="display-field">@Model.IsRoleAdmin</div>

    <div class="display-label">IsRoleReviewer</div>
    <div class="display-field">@Model.IsRoleReviewer</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}

</article>

