@model MovieReviewWebApp.Areas.Reviews.ViewModels.RecentReviewsViewModel
@{
    ViewBag.Title = "Recent";
}

<h2>Most Recent Reviews</h2>

@if (Model.Reviews.Count() == 0)
{
    <p>No recent reviews.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Review Date</th>
                <th>Reviewer</th>
                <th>Title</th>
                <th>Stars</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model.Reviews)
            {
                <tr>
                    <td>@review.ReviewDate.ToString("d")</td>
                    <td>@review.Reviewer.Name</td>
                    <td>@Html.ActionLink(review.Movie.Title, "View", new { id=review.ID })</td>
                    <td>@Html.DisplayFor(x=>review.Stars)</td>
                </tr>
            }
        </tbody>
    </table>
}
