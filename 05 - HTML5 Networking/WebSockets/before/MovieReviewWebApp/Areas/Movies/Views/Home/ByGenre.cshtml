@model MovieReviewWebApp.Areas.Movies.ViewModels.ViewByGenreViewModel
@{
    ViewBag.Title = "ByGenre";
}

<h2>Movies by Genre</h2>
@using (Html.BeginForm())
{
    <p>
        <label>Genre</label>
        @Html.DropDownList("genreID", Model.GenreSelectList)
    </p>
    <p><input type="submit" value="Go" /></p>
}

@if (Model.Movies.Count() == 0)
{
    <p>No movies.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Country</th>
                <th>Released</th>
                <th>Rating</th>
                <th>Reviews</th>
                <th>Average Stars</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Title, "View", new { movie.ID })</td>
                    <td>@movie.Country.Name</td>
                    <td>@movie.Year</td>
                    <td>@movie.Rating</td>
                    <td>@movie.NumberOfReviews</td>
                    <td>@Html.DisplayFor(x=>movie.AverageStars)</td>
                </tr>                
            }
        </tbody>
    </table>
} 
