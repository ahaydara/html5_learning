@model NavigationViewModel

@helper MenuSelected(string name)
{
    if (Model.Area.Equals(name, StringComparison.OrdinalIgnoreCase))
    {
        <text>class="menu-current"</text>
    }
}

<nav>
    <ul>
        <li @MenuSelected("")>@Html.ActionLink("Home", "Index", "Home")</li>
@*        <li @MenuSelected("area-previews")>@Html.ActionLink("Previews", "Index", "Home", new { area="Previews" }, null)</li>*@
        <li @MenuSelected("movies")>@Html.ActionLink("Movies", "Index", "Home", new { area="Movies" }, null)</li>
        <li @MenuSelected("reviews")>@Html.ActionLink("Reviews", "Index", "Home", new { area="Reviews" }, null)</li>
        @if (Model.Admin)
        {
            <li @MenuSelected("admin")>@Html.ActionLink("Admin", "Index", "Home", new { area = "Admin" }, null)</li>
        }
    </ul>
</nav>
